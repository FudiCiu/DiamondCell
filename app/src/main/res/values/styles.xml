<resources>

    <!-- Tema dasar applikasi. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style untuk recycler view item -->
    <style name="RecyclerItemText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Style untuk judul dari recycler view item -->
    <style name="RecyclerItemTitle" parent="RecyclerItemText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style untuk label pada activity detail -->
    <style name="DetailLabel">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Style untuk value pada activity detail -->
    <style name="DetailValue">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
